FROM node:12.4.0-stretch as builder

WORKDIR /project

COPY KnigoPoiskClient/package.json KnigoPoiskClient/package-lock.json ./
RUN npm ci

COPY KnigoPoiskClient .
RUN npm run build

FROM nginx:stable-perl

COPY --from=builder /project/dist/KnigoPoiskClient /usr/share/nginx/html
COPY KnigoPoiskClient/nginx /etc/nginx
